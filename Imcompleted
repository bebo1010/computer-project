#include <iostream>
using namespace std;
int main(){
	int x,y=0;
	int z=0;
	cin >> x;
	int a[x];
	for(int i=0;i<x;i++) cin >> a[i];
	for(int i=0;i<x-1;i++){
	if(a[i]<=a[i+1]&&a[i+1]>a[i+2]){
	y++;
	}
	}
	for(int i=x-2;i>=0;i--){
	if(a[x-1]>=a[i]) z++;
	}
	if(z==x-1) y--;
	cout << y;
    return 0;
}
